<Page x:Class="Star_Citizen_Pfusch.homeScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Star_Citizen_Pfusch"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="homeScreen" RenderOptions.BitmapScalingMode="HighQuality" >

    <Grid x:Name="Grid" >
        
        <Grid.Background>
            <ImageBrush ImageSource="/Graphics/Background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Frame x:Name="ContentDisplay" Grid.Column="2" Grid.Row="0" Grid.RowSpan="8" BorderThickness="0" NavigationUIVisibility="Hidden" MouseLeftButtonDown="ContentFrame_MouseLeftButtonDown" MouseMove="ContentFrame_MouseMove" MouseRightButtonUp="ContentDisplay_MouseRightButtonUp" >
            <Frame.Background>
                <SolidColorBrush>
                    <SolidColorBrush.Color>
                        <Color A="220" R="50" G="50" B="50" />
                    </SolidColorBrush.Color>
                </SolidColorBrush>
            </Frame.Background>
        </Frame>

        <Rectangle Grid.Column="0" Grid.Row="0" >
            <Rectangle.Fill>
                <SolidColorBrush>
                    <SolidColorBrush.Color>
                        <Color A="230" R="40" G="40" B="40" />
                    </SolidColorBrush.Color>
                </SolidColorBrush>
            </Rectangle.Fill>
        </Rectangle>

        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="LightGray" />

        <ListBox Grid.Row="0" Background="Transparent" BorderThickness="0" Grid.Column="0" >
            <ListBoxItem Content="Hauptmenü" FontSize="35" Foreground="White" x:Name="MainMenuItem" PreviewMouseLeftButtonUp="MainMenuItem_MouseLeftButtonDown" >
                <ListBoxItem.Style>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" >
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="White" Offset="0.025"/>
                                            <GradientStop Offset="0.025">
                                                <GradientStop.Color>
                                                    <Color A="255" R="40" G="40" B="40" />
                                                </GradientStop.Color>
                                            </GradientStop>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBoxItem.Style>
            </ListBoxItem>

            <ListBoxItem Content="Schiffe" FontSize="35" Foreground="White" x:Name="ShipItem" PreviewMouseLeftButtonUp="ShipItem_MouseLeftButtonDown" >
                <ListBoxItem.Style>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" >
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="White" Offset="0.025"/>
                                            <GradientStop Offset="0.025">
                                                <GradientStop.Color>
                                                    <Color A="255" R="40" G="40" B="40" />
                                                </GradientStop.Color>
                                            </GradientStop>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBoxItem.Style>
            </ListBoxItem>

            <ListBoxItem Content="Fahrzeuge" FontSize="35" Foreground="White" PreviewMouseLeftButtonUp="Vehicle_PreviewMouseLeftButtonUp" >
                <ListBoxItem.Style>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="White" Offset="0.025"/>
                                            <GradientStop Offset="0.025">
                                                <GradientStop.Color>
                                                    <Color A="255" R="40" G="40" B="40" />
                                                </GradientStop.Color>
                                            </GradientStop>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBoxItem.Style>
            </ListBoxItem>

            <ListBoxItem Content="Komponenten" FontSize="35" Foreground="White" >
                <ListBoxItem.Style>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" >
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="White" Offset="0.025"/>
                                            <GradientStop Offset="0.025">
                                                <GradientStop.Color>
                                                    <Color A="255" R="40" G="40" B="40" />
                                                </GradientStop.Color>
                                            </GradientStop>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBoxItem.Style>
            </ListBoxItem>

            <ListBoxItem Content="Shops" FontSize="35" Foreground="White" x:Name="ShopItem" PreviewMouseLeftButtonUp="ShopItem_PreviewMouseLeftButtonUp" >
                <ListBoxItem.Style>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" >
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="White" Offset="0.025"/>
                                            <GradientStop Offset="0.025">
                                                <GradientStop.Color>
                                                    <Color A="255" R="40" G="40" B="40" />
                                                </GradientStop.Color>
                                            </GradientStop>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBoxItem.Style>
            </ListBoxItem>

            <ListBoxItem Content="Einstellungen" FontSize="35" Foreground="White" x:Name="SettingsItem" PreviewMouseLeftButtonUp="SettingsItem_MouseLeftButtonDown" >
                <ListBoxItem.Style>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" >
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="White" Offset="0.025"/>
                                            <GradientStop Offset="0.025">
                                                <GradientStop.Color>
                                                    <Color A="255" R="40" G="40" B="40" />
                                                </GradientStop.Color>
                                            </GradientStop>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBoxItem.Style>
            </ListBoxItem>
        </ListBox>

    </Grid>
</Page>
