<Page x:Class="Star_Citizen_Pfusch.Pages.Ships.ShipStatistics"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Star_Citizen_Pfusch.Pages.Ships"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="450"
      Title="ShipStatistics">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height=".08*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Viewbox HorizontalAlignment="Left" Margin="0,0,0,5" >
            <TextBox Background="Transparent" BorderThickness="0" Text="Schiff Statistiken" Foreground="White" IsReadOnly="True" />
        </Viewbox>
        <Rectangle Fill="White" Height="2" VerticalAlignment="Bottom" Grid.Row="0" />

        <ListBox Grid.Row="1" Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" >
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border BorderBrush="{TemplateBinding BorderBrush}" 
                  BorderThickness="{TemplateBinding BorderThickness}" 
                  Background="{TemplateBinding Background}">
                                    <ContentPresenter />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBoxItem Margin="0,0,0,5" >
                <TextBox IsReadOnly="True" x:Name="ShipNameBox" Text="Name: " Background="Transparent" BorderThickness="0" FontSize="25" Foreground="White" />
            </ListBoxItem>
            <ListBoxItem Margin="0,0,0,5" >
                <TextBox IsReadOnly="True" x:Name="ShipSizeBox" Text="Size: " Background="Transparent" BorderThickness="0" FontSize="25" Foreground="White" />
            </ListBoxItem>
            <ListBoxItem Margin="0,0,0,5" >
                <TextBox IsReadOnly="True" x:Name="ShipMassBox" Text="Mass: " Background="Transparent" BorderThickness="0" FontSize="25" Foreground="White" />
            </ListBoxItem>
            <ListBoxItem Margin="0,0,0,5" >
                <TextBox IsReadOnly="True" x:Name="ShipRoleBox" Text="Role: " Background="Transparent" BorderThickness="0" FontSize="25" Foreground="White" />
            </ListBoxItem>
            <ListBoxItem Margin="0,0,0,5" >
                <TextBox IsReadOnly="True" x:Name="ShipCareerBox" Text="Career: " Background="Transparent" BorderThickness="0" FontSize="25" Foreground="White" />
            </ListBoxItem>
            <ListBoxItem Margin="0,0,0,5" >
                <TextBox IsReadOnly="True" x:Name="ShipDescriptionBox" Text="Description: " Background="Transparent" BorderThickness="0" FontSize="25" Foreground="White" TextWrapping="Wrap" />
            </ListBoxItem>
            <ListBoxItem Margin="0,0,0,5" >
                <TextBox IsReadOnly="True" x:Name="ShipCargoBox" Text="Cargo: " Background="Transparent" BorderThickness="0" FontSize="25" Foreground="White" />
            </ListBoxItem>
            <ListBoxItem Margin="0,0,0,5" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".05*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width=".05*" />
                    </Grid.ColumnDefinitions>

                    <Rectangle Fill="Gray" Height="2" Grid.Column="1" />
                </Grid>
            </ListBoxItem>
            <ListBoxItem Margin="0,0,0,5" >
                <TreeView Background="Transparent" BorderThickness="0" >
                    <TreeViewItem x:Name="ShopTreeView" Foreground="White" Header="Shops" FontSize="25" Background="Transparent" />
                </TreeView>
            </ListBoxItem>
        </ListBox>
    </Grid>
</Page>
