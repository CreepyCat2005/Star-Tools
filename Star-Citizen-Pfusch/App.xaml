<Application x:Class="Star_Citizen_Pfusch.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:Star_Citizen_Pfusch"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="TextColor" >
            <SolidColorBrush.Color>
                <Color A="255" R="255" G="255" B="255" />
            </SolidColorBrush.Color>
        </SolidColorBrush>
        <SolidColorBrush x:Key="MenuColor" >
            <SolidColorBrush.Color>
                <Color A="255" R="255" G="255" B="255" />
            </SolidColorBrush.Color>
        </SolidColorBrush>
        <SolidColorBrush x:Key="HeadlineColor" >
            <SolidColorBrush.Color>
                <Color A="255" R="255" G="255" B="255" />
            </SolidColorBrush.Color>
        </SolidColorBrush>
        <system:String x:Key="Theme" >Dark</system:String>
        <system:Double x:Key="TextFontSize" >18</system:Double>
        <system:Double x:Key="MenuFontSize" >26</system:Double>
        <system:Double x:Key="HeadlineFontSize" >24</system:Double>
    </Application.Resources>
    </Application>